<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-zinc-900 text-white min-h-screen flex justify-center items-center">
  <!-- ðŸ”¹ Main Container -->
  <div class="w-[90%] max-w-3xl bg-zinc-950 p-10 rounded-2xl shadow-lg space-y-8">
     <!-- ðŸ”¹ Header Section -->
      <div class="flex justify-between items-center">
            <h1 class="text-3xl font-semibold">Hello, <%= user.name %> ðŸ¥° </h1>
             <a href="/logout" class="bg-red-500 hover:bg-red-600 transition px-4 py-2 rounded-md text-sm font-medium">Logout </a>
        </div>
    <!-- ðŸ”¹ Post Creation Section -->   
    <div class="space-y-4">
         <h2 class="text-2xl font-semibold text-center">Create a New Post</h2>
       <form action="/post" method="post" class="flex flex-col items-center space-y-4">
           <textarea class="resize-none bg-transparent rounded-md border-2 border-zinc-800 w-full p-4 focus:border-blue-500 outline-none transition" name="content" placeholder="What's on your mind?" rows="5"></textarea>
            <input type="submit" value="Create New Post" class="bg-blue-500 hover:bg-blue-600 transition px-6 py-2 rounded-md font-medium cursor-pointer">
      </form>
    </div>
    <!-- ðŸ”¹ Posts Section -->
    <div class="mt-10">
      <h3 class="text-2xl font-semibold mb-5 text-center">Your Posts</h3>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-5">  
        <% user.posts.reverse().forEach(function(post){%>
            <div class="border border-zinc-800 rounded-lg p-4 text-left hover:scale-[1.02] transition">
            
          <h4 class="font-semibold text-blue-400 mb-2"><%= user.username %> ðŸ¥° </h4>
          <p class="text-zinc-300 text-sm">  <%=post.content %> </p>
          <small class="mt-2 inline-block"><%= post.likes.length%> likes</small>
          <div class="btn flex mt-5 gap-5">
            <a class="text-blue-500 px-2" href="/like/<%= post._id %>">
                <%= post.likes.length % 2 === 1 ? "Unlike" : "Like" %>
            </a>
            <a class="text-red-500" href="/edit/<%= post._id%>">Edit</a>
          </div>
        </div>
        <% })%>
      </div>
    </div>
  </div>
</body>
</html>
